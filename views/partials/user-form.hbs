<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.nom}}" placeholder="Nom" name="nom">
    <label for="floatingInput">Nom</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.cognoms}}" placeholder="Cognoms"
      name="cognoms">
    <label for="floatingInput">Cognoms</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" value="{{this.email}}" placeholder="email@email.com"
      name="email">
    <label for="floatingInput">Email</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.telefon}}" placeholder="Telèfon"
      name="telefon">
    <label for="floatingInput">Telèfon</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.coeficient}}" placeholder="Coeficient"
      name="coeficient">
    <label for="floatingInput">Coeficient</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <select class="form-control" id="select1" value="{{this.estat}}" placeholder="Estat" name="estat">
      <option value="{{this.estat}}" hidden="hidden" selected="selected">{{this.estat}}</option>
      <option value="1">Actiu</option>
      <option value="0">Baixa</option>
    </select>
    <label for="floatingInput">Estat</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <select class="form-control" id="select2" value="{{this.vinculat}}" placeholder="Vinculat" name="vinculat">
      <option value="{{this.vinculat}}" hidden="hidden" selected="selected">{{this.vinculat}}</option>
      <option value="1">Sí</option>
      <option value="0">No</option>
    </select>
    <label for="floatingInput">Vinculat</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <textarea class="form-control" placeholder="Comentaris" id="comments" name="comentaris"
      style="height: 70px">{{this.comentaris}}</textarea>
    <label for="comments">Comentaris</label>
  </div>
</div>
<div class="col-12 d-grid">
  <button class="btn btn-primary" href="/" type="submit">ENVIA</button>
</div>
<script>
  function validate() {
    var name = document.forms["dadesUsuari"]["nom"];
    var cognoms = document.forms["dadesUsuari"]["cognoms"];
    var email = document.forms["dadesUsuari"]["email"];
    var coeficient = document.forms["dadesUsuari"]["coeficient"];
    var estat = document.forms["dadesUsuari"]["estat"];
    var vinculat = document.forms["dadesUsuari"]["vinculat"];
    //document.forms["dadesUsuari"]["coeficient"].value = document.forms["dadesUsuari"]["coeficient"].replace(',', '.'));

    if (name.value == "") {
      alert("Introdueix el nom");
      name.focus();
      return false;
    }
    if (cognoms.value == "") {
      alert("Introdueix el cognom");
      cognoms.focus();
      return false;
    }
    if (email.value == "") {
      alert("Introdueix el correu electrònic");
      email.focus();
      return false;
    }
    if (estat.value == "") {
      alert("Indica l'estat de l'usuari, Actiu o Baixa");
      estat.focus();
      return false;
    }
     if (vinculat.value == "") {
      alert("Introdueix si l'usuari té l'app vinculada");
      vinculat.focus();
      return false;
    }
    if (coeficient.value > 1 || coeficient.value < 0 || coeficient.value == "") {
      alert("Introdueix un coeficient entre 0 i 1");
      coeficient.focus();
      return false;
    }   
  }
</script>