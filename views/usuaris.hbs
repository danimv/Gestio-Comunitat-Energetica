          <td scope="row">{{this.idUsuari}}</th>
          <td>{{this.nom}}</td>
          <td>{{this.cognoms}}</td>
          <td>{{this.email}}</td>
          <td style="text-align: center;"><b>{{this.coeficient}}</b></td>
          <td>{{this.estat}}</td>
          <td>{{this.vinculat}}</td>
          <td style="width: 17%;" class="text-end">
            <a style="font-size:100%" ; href="/usuaris/viewuser/{{this.idUsuari}}" type="button"
